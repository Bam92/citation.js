{
  "plugins": ["plugins/markdown"],
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc","closure"]
  },
  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "destination": "docs/api",
    "recurse": true
  },
  "source": {
    "includePattern": "(?:.+-0\\.2\\.js|index.js)$",
    "excludePattern": "(^|\\/|\\\\)_|b\\.js|(?:docs\\/src\\/.+?\\.js$)"
  },
  "templates": {
    "default": {
      "layoutFile": "./docs/static/tmpl/layout.tmpl"
    },
    "cleverLinks": false,
    "monospaceLinks": false
  }
} 
